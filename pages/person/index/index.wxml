<!-- 服务页  -->
<view class="flex-column flex-help-center">
    <image class="user-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <!-- <text class="userinfo-nickname">{{userInfo.nickName}}</text> -->
    <view class="user-info flex-row">
        <view class="c flex-column flex-main-center" style="border-top:2px solid #e64c66;">
            <text class="user-title">姓名</text>
            <text>{{userInfo.XM}}</text>
        </view>
        <view style="border-right:1px solid #394166"></view>
        <view class="c flex-column flex-main-center" style="border-top:2px solid #0ba3a6">
            <text class="user-title">工号</text>
            <text>{{userInfo.GH}}</text>
        </view>
        <view style="border-right:1rpx solid #394166"></view>
        <view class="c flex-column flex-main-center" style="border-top:2px solid #f7ba47">
            <text class="user-title">角色</text>
            <text wx:if="{{userInfo.ROLE==1}}">教职工</text>
            <text wx:else>学生</text>
        </view>
    </view>
</view>
<view class="container">
    <view class="app flex-column" bindtap="click_msg">
        <text class="count">12</text>
        <image class="app-icon" src="{{host}}static/img/msg.png"></image>
        <text class="title">微讯</text>
    </view>
    <view class="app flex-column">
        <text class="count">18</text>
        <image class="app-icon" src="{{host}}static/img/email.svg"></image>
        <text class="title">邮件</text>
    </view>
    <view class="app flex-column">
        <text class="count">15</text>
        <image class="app-icon" src="{{host}}static/img/notify.svg"></image>
        <text class="title">通知公告</text>
    </view>
    <view class="app flex-column">
        <text class="count">2</text>
        <image class="app-icon" src="{{host}}static/img/document.svg"></image>
        <text class="title">公文</text>
    </view>
    <view class="app flex-column">
        <text class="count">2</text>
        <image class="app-icon" src="{{host}}static/img/workflow.svg"></image>
        <text class="title">工作流</text>
    </view>
    <view class="app flex-column">
        <text class="count">2</text>
        <image class="app-icon" src="{{host}}static/img/vote.svg"></image>
        <text class="title">投票</text>
    </view>
    <view class="app flex-column">
        <text class="count">16</text>
        <image class="app-icon" src="{{host}}static/img/repair.svg"></image>
        <text class="title">报修</text>
    </view>
    <view class="app flex-column">
        <text class="count">8</text>
        <image class="app-icon" src="{{host}}static/img/log.svg"></image>
        <text class="title">个人日志</text>
    </view>

</view>
