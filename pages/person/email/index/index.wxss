.swiper-tab {
    width: 100%;
    text-align: center;
    line-height: 100rpx;
    background-color: #50587d;
}
.swiper-tab-list {
    font-size: 30rpx;
    flex: 1;
}
.on {
    background-color: #3468b3;
    font-weight: bold;
}
.swiper-box {
    overflow: hidden;
