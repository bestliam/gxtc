}
.msg{
  padding: 30rpx 30rpx;
  border-bottom: 1px solid #2f3658;
}
.attachment{width: 40rpx;height: 40rpx}
.msg-main{flex: 6;}
.msg-date{width: 130rpx;font-size: 20rpx;color: #ffffff;text-align: center;}
