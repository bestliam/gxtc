/**app.wxss**/
page{font-family: "Microsoft Yahei";background-color: #394166;font-size: 14px;color: #ffffff;}
.header{
    padding: 35rpx 0;text-align: center;border-bottom: 2rpx solid #e8e8e8
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
/*盒子模型定义 元素垂直方向排列*/
.flex-column{
  display: flex;flex-direction: column;
}
/*盒子模型定义 元素水平方向排列*/
.flex-row{
  display: flex;flex-direction:row;
}
/* 盒子模型 主轴居中*/
.flex-main-center{justify-content: center;}
/* 盒子模型 辅轴居中*/
.flex-help-center{align-items: center;}
/* 数量提醒 */
.count{
  font-weight:bold;
  background-color: #E84E6A;
  min-width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  line-height: 20rpx;
  text-align: center;
  color: #ffffff;
  padding: 10rpx;
  font-size: 20rpx;
}
.loading{padding: 40rpx;text-align: center;}
